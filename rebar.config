% -*- mode: Erlang; -*-
{erl_opts, [
    warnings_as_errors
]}.

{project_plugins, [
    {rebar3_hex, "~> 7.0"},
    {rebar3_ex_doc, "~> 0.2"},
    {erlfmt, "~> 1.6"},
    {covertool, "~> 2.0.7"}
]}.

{profiles, [
    {test, [
        {erl_opts, [nowarn_export_all, nowarn_missing_spec, nowarn_missing_doc]},
        {eunit_opts, [verbose]},
        {covertool, [{coverdata_files, ["eunit.coverdata", "ct.coverdata"]}]},
        {cover_opts, [verbose, {min_coverage, 60}]},
        {cover_enabled, true},
        {cover_export_enabled, true}
    ]}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{ex_doc, [
    {source_url, <<"https://github.com/dnsimple/base32_erlang">>},
    {main, <<"readme">>},
    {extras, [
        {'README.md', #{title => <<"Overview">>}},
        {'LICENSE', #{title => <<"License">>}}
    ]}
]}.

{erlfmt, [
    write,
    {print_width, 140}
]}.
